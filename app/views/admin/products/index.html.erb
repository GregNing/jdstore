
<h2> 商品列表</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增商品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">商品實體圖</th>
      <th>產品名稱</th>
      <th>價格</th>
      <th width="100"> 功能</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
                  
        <% if current_user  %>                                                
        <%= link_to("Edit", edit_admin_product_path(product), :class => "btn btn-xs btn-info") %> 
        <%= link_to("Destroy", admin_product_path(product), method: :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>                                                   
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>