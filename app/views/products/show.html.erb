<div class="row">
  <div class="col-md-5">
    <% if @products.image.present? %>
      <%= image_tag(@products.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @products.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= render_formate_description(@products) %>
      </p>
    </div>
    <div> 數量 : <%= @products.quantity %> </div>
    <div class="product-price"> ￥ <%= @products.price %> </div>
    <div class="pull-right">
      <%= link_to("加入購物車", "#", :class => "btn btn-danger btn-lg") %>
    <%= link_to "回首頁", products_path,  class: "btn btn-primary", style: "padding:12px 18px;" %>
    </div> 
  </div>
  